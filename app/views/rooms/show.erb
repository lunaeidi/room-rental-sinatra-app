
<img src="../../../public/<%=@room.pic.split(",")[0][14..-2]%>"width="200"height="200">

<h1><%=@room.listing_title%></h1>
<h3>Address: <%=@room.location%></h3>
<h3>Cost/month: $<%=@room.cost%></h3>
<h3>Occupancy:<%=@room.occupancy%></h3>
